<%- layout("layouts/boilerplate"); %>
<body class="mt-3">
    
    <div class="container">
    <form novalidate
        class="form row row-cols-1 col-lg-8 col-sm-10 offset-2 p-1 needs-validation"
        action="/listings/<%= data['_id'] %>?_method=PUT" method="post">
        <h4 class="p-2 text-center">  Edit your listing </h4>
        <h5 class="p-2 text-center"> <%= data["_id"] %> </h5>
        <div class="col col-10 offset-1 p-1  p-2">
            <label for="title" class="form-label">title</label> 
            <input 
                type="text" 
                name="listing[title]"
                id="title" 
                placeholder="title"
                value="<%= data.title %>"
                class="form-control mb-3 " 
                required/>
            <div class="invalid-feedback">
                enter valid title
            </div>
        
            <label for="price" class="form-label">price</label>
            <input 
                type="number" 
                name="listing[price]" 
                id="price" 
                placeholder="Price"
                value="<%= data.price %>"
                class="form-control mb-3" 
                required>
            
                <div class="invalid-feedback">
                    enter some price
                </div>
               
            <label for="image" class="form-label">image</label>
            <input 
                type="text" 
                name="listing[image]" 
                id="image"
                placeholder="image"
                value="<%= data.image %>" 
                class="form-control mb-3"
                required>

                <div class="invalid-feedback">
                    enter valid image url
                </div>

            <div class="row row-cols-2 mb-3 ">

                <span class="pb-1">
                    <label for="country" class="form-label">country</label>
                    <input 
                    type="text" 
                    name="listing[country]" 
                    id="country"
                    placeholder="country"
                    value="<%= data.country %>" 
                    class="form-control col-lg-5"
                    required>

                    <div class="invalid-feedback">
                        enter valid country
                    </div>
                </span>


              <span class="pb-1">
                <label for="location" class="form-label">Location</label>
                <input 
                    type="text" 
                    name="listing[location]" 
                    id="location"
                    placeholder="location"
                    value="<%= data.location %>" 
                    class="form-control col-lg-5"
                    required>
                    <div class="invalid-feedback">
                        enter valid country
                    </div>
              </span>

            </div>

            <label for="description" class="form-label">Description</label>
            <textarea 
                name="listing[description]" 
                id="description" 
                cols="30" rows="3"
                class="form-control mb-3" required >
                <%= data.description %></textarea>
            <div class="invalid-feedback">
                add some description
            </div>

            <button class="btn btn-sm btn-primary px-2 col-3 offset-0">submit</button>
        </div>
        </form>
    </div>
    
</body>